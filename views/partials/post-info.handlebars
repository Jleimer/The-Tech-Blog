<article class="post post-box">
  <div class="title post-header">
    <a href="{{post_url}}" target="_blank">{{title}}</a>
    by {{user.username}} on {{format_date created_at}}
  </div>
  <span>({{format_url post_url}})</span>
  <div class="meta">
    <a class="text" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>